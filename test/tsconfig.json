{
  "files": [
    "./src/index.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM",
      "ScriptHost"
    ],
    "incremental": false,
    "allowJs": false,
    "allowUmdGlobalAccess": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  }
}
