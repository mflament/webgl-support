{
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules/**", "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM",
      "ScriptHost"
    ],
    "declaration": true,
    "incremental": false,
    "allowJs": false,
    "allowUmdGlobalAccess": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
